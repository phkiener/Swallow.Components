<CascadingValue Value="@this" IsFixed ChildContent="@ChildContent" />

<div class="sw tab-container" role="tablist">
    <header>
        @foreach (var tab in registeredTabs)
        {
            <label role="tab">
                <span>@tab.Title</span>
                <input type="radio"
                       name="@fieldIdentifier.FieldName"
                       value="@tab.Identifier"
                       checked="@(tab.Identifier == ActiveTab)"
                       data-register="@(!RendererInfo.IsInteractive)"
                       @onchange="@(SwitchTabAsync)">
            </label>
        }
    </header>

    <div role="tabpanel">
        @foreach (var tab in registeredTabs)
        {
            if (tab.Identifier == ActiveTab)
            {
                <article data-identifier="@tab.Identifier">
                    @tab.Content
                </article>
            }
            else
            {
                <article data-identifier="@tab.Identifier" aria-hidden="true" hidden>
                    @tab.Content
                </article>
            }
        }
    </div>
</div>
